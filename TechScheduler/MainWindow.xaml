<Window x:Class="TechScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechScheduler"
        mc:Ignorable="d"
        Title="Tech Scheduler" Height="720" Width="900">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.ColumnSpan="5">

            <TabItem Header="Scheduler">
                <Grid Background="#FFE5E5E5">

                    <StackPanel x:Name="ClientPanel" Margin="10,0,0,0" HorizontalAlignment="Left" Orientation="Vertical">
                        <Label Content="Client:"/>
                        <TextBlock x:Name="ClientTextBlock" Width="112" Text="This is the name of the client to schedule" Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel x:Name="TaskLabelPanel" HorizontalAlignment="Left" Orientation="Horizontal" >
                        <Label Content="Tasks:" Margin="10,42,0,0"/>
                        <Label Content="Day:" Margin="106,42,0,0"/>
                        <Label Content="Time/Technician:" Margin="115,42,0,0"/>
                        <Label Content="Time Zone(s):" Margin="49,42,0,0"/>
                    </StackPanel>

                    <StackPanel x:Name="TaskSelectionPanel" Margin="-20,-520,0,0"  HorizontalAlignment="Left" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type FrameworkElement}">
                                <Setter Property="Margin" Value="35,0,0,0"/>
                                <Setter Property="Width" Value="112"/>
                                <Setter Property="Height" Value="20"/>
                            </Style>
                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
                            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
                        </StackPanel.Resources>
                        <TextBlock x:Name="TaskTextBlock" Text="Task to schedule" Width="112" />
                        <ComboBox x:Name="DayComboBox" />
                        <ComboBox x:Name="TimeComboBox"/>
                        <TextBlock x:Name="TimeZoneComboBox" Text="PST: 10:00 AM CST: 12:00 PM"/>
                    </StackPanel>
                    
                    
                </Grid>
                
                

            </TabItem>

            <TabItem Header="Setup">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>