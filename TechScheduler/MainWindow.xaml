<Window x:Class="TechScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechScheduler"
        mc:Ignorable="d"
        Title="Tech Scheduler" Height="720" Width="900">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.ColumnSpan="5">

            <TabItem Header="Scheduler">
                <Grid Background="#FFE5E5E5">
                    
                    <StackPanel x:Name="ClientPanel" Margin="10,0,0,0" HorizontalAlignment="Left">
                        <Label Content="Client:"/>
                        <TextBlock x:Name="ClientTextBlock" Width="112"/>
                    </StackPanel>

                    <StackPanel x:Name="TaskLabelPanel" Margin="10,40,0,0"  HorizontalAlignment="Left" Orientation="Horizontal" >
                        <Label Content="Tasks:"/>
                        <Label Content="Day:" />
                        <Label Content="Time:" />
                        <Label Content="Time Zone:" />
                    </StackPanel>

                    <StackPanel x:Name="TaskSelectionPanel" Margin="10,80,0,0"  HorizontalAlignment="Left">
                        <TextBlock x:Name="TaskTextBlock" Text="" Width="112" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Setup">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>