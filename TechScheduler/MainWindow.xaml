<Window x:Class="TechScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechScheduler"
        mc:Ignorable="d"
        Title="Tech Scheduler" Height="720" Width="900">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.ColumnSpan="5">

            <TabItem Header="Scheduler">
                <Grid Background="#FFE5E5E5">
                    <StackPanel x:Name="MainPanel" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,0">
                        
                        <StackPanel x:Name="ClientPanel" Margin="10,0,0,0" HorizontalAlignment="Left" Orientation="Vertical">
                            <Label Content="Client:" FontWeight="Bold" />
                            <Border BorderBrush="Black" BorderThickness=".3" Margin="5,0,0,0">
                                <TextBlock x:Name="ClientTextBlock" Width="135" Height="18" Text="This is the name of the client to schedule" Margin="2,0,0,0" />
                            </Border>
                            
                        </StackPanel>

                        <StackPanel x:Name="TaskLabelPanel" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,-42,0,0" >
                            <Label Content="Tasks:" FontWeight="Bold" Margin="10,42,0,0" />
                            <Label Content="Day:" FontWeight="Bold" Margin="106,42,0,0"/>
                            <Label Content="Time/Technician:" FontWeight="Bold" Margin="115,42,0,0"/>
                            <Label Content="Time Zone(s):" FontWeight="Bold" Margin="49,42,0,0"/>
                        </StackPanel>

                        <StackPanel x:Name="TaskSelectionPanel" Margin="10,0,0,0"  HorizontalAlignment="Left" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type FrameworkElement}">
                                    <Setter Property="Margin" Value="30,0,0,0"/>
                                    <Setter Property="Width" Value="135"/>
                                    <Setter Property="Height" Value="18"/>
                                </Style>
                                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
                                <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
                            </StackPanel.Resources>
                            <Border BorderBrush="Black" BorderThickness=".3" Margin="5,0,0,0">
                                <TextBlock x:Name="TaskTextBlock" Text="Task to schedule" Margin="2,0,0,0"/>
                            </Border>
                            <ComboBox x:Name="DayComboBox" />
                            <ComboBox x:Name="TimeComboBox"/>
                            <Border BorderBrush="Black" BorderThickness=".3" Margin="5,0,0,0" >
                                <TextBlock x:Name="TimeZoneComboBox" Text="PST: 10:00 AM CST: 12:00 PM" Margin="2,0,0,0"/>
                            </Border>
                        </StackPanel>
                        
                    </StackPanel>



                </Grid>



            </TabItem>

            <TabItem Header="Setup">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>